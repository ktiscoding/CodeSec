<HomeScreen>:
#This creates the turquoise background
    name: "HomeScreen"
    canvas:
        Color:
            rgba: 0.496, 0.95, 0.75, 0.9
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

#This creates a layer format which allows us to put the widgets on top of one another
    BoxLayout:
        pos:0,0
        size: root.width, root.height
        orientation: "vertical"
        spacing: 10
        padding: 25
        
#This creates the title at the top of the screen
        Label:
            color: (0.168, 0.43, 0.957, 0.55)
            text: "Hand Right"
            font_size: 75
            top: root.top
            center_x: root.width/2
            size_hint: 1, 0.2

#This produces the image of the main character and puts it in the middle of the screen
        Image:
            source: "hero_1.png"
            center_x: root.width/2
            center_y: root.height/2

#This creates the button at the bottom of the screen which allows you to move onto the level select screen and changes colour when you hold it
        Button:
            id: start
            text: "Start"
            font_size: 50
            center_x: root.width/2
            size: self.width, 100
            size_hint: 1, 0.15
            background_normal: ''
            background_color: 0.75, 0.945, 0.43, 0.85
            background_down: ''
            on_press: start.background_color = 0.422, 0.891, 0.969, 0.85
            on_release:
                root.manager.current = "LevelSelect"


<LevelSelect>:
#This creates the turquoise background
    name: "LevelSelect"
    canvas:
        Color:
            rgba: 0.496, 0.95, 0.75, 0.9
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
            
 #This creates a layer format which allows us to put the widgets on top of one another   
    BoxLayout:
        pos:0,0
        size: root.width, root.height
        orientation: "vertical"
        spacing: 10
        padding: 10
        
#This creates the title at the top of the screen which says Level Select
        Label:
            color: (0.168, 0.43, 0.957, 0.55)
            text: "Level Select"
            font_size: 50
            top: root.top
            center_x: root.width/2
            size_hint: 1, 0.15

#This creates a grid layout of all the levels which you can use 
        GridLayout:
            spacing: 50
            padding: 50
            cols: 3
            rows: 4
            
#This button takes you to the first level screen where you are told how to draw the letter A
            Button:
                id: one
                text: "1"
                font_size: 50
                background_normal: ''
                background_color: 0.75, 0.945, 0.43, 0.85
                background_down: ''
                on_press: one.background_color = 0.422, 0.891, 0.969, 0.85
                on_release:
                    root.manager.current = "LevelOne"
                    
#Here are all the buttons that currentl have no functionality but will have functionality in future updates of this program
            Button:
                text: "2"
                font_size: 25
            Button:
                text: "3"
                font_size: 25
            Button:
                text: "4"
                font_size: 25
            Button:
                text: "5"
                font_size: 25
            Button:
                text: "6"
                font_size: 25
            Button:
                text: "7"
                font_size: 25
            Button:
                text: "8"
                font_size: 25
            Button:
                text: "9"
                font_size: 25
            Button:
                text: "10"
                font_size: 25
            Button:
                text: "11"
                font_size: 25
            Button:
                text: "12"
                font_size: 25
                
#This a currently unusable button which would allow you to access more levels
        Button:
            text: "Next Levels"
            font_size: 30
            size_hint: 1, 0.075


<LevelOne>:
#This creates the turquoise background
    name: "LevelOne"
    canvas:
        Color:
            rgba: 0.496, 0.95, 0.75, 0.9
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

#This creates a layer format which allows us to put the widgets on top of one another
    BoxLayout:
        pos:0,0
        size: root.width, root.height
        orientation: "vertical"
        spacing: 10
        padding: 10

#This creates a little title at the top which says Try writing
        Label:
            color: (0.168, 0.43, 0.957, 0.55)
            text: "Try writing"
            font_size: 25
            top: root.top
            center_x: root.width/2
            size_hint: 1, 0.15

#This shows the image of how to write an A
        Image:
            source: "Aa.png"
            center_x: root.width/2
            center_y: root.height/2
            size_hint:1, 0.35

#This button takes the picture of the letter and moves you onto the screen which allows you to see the image 
        Button:
            id: A
            text: "press here to take picture"
            font_size: 20
            background_normal: ''
            background_color: 0.75, 0.945, 0.43, 0.85
            on_press: A.background_color = 0.422, 0.891, 0.969, 0.85
            on_release:
                app.camera()
                root.manager.current = "LevelOneImage"


<LevelOneImage>:
#This creates the turquoise background
    name: "LevelOneImage"
    canvas:
        Color:
            rgba: 0.496, 0.95, 0.75, 0.9
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
            
#This creates a layer format which allows us to put the widgets on top of one another   
    BoxLayout:
        pos:0,0
        size: root.width, root.height
        orientation: "vertical"
        spacing: 10
        padding: 10

#This adds the image of the picture taken of A to the top of the screen
        Image:
            source: "letter.png"
            center_x: root.width/2
            center_y: root.height/2
            size_hint: 1, 0.75

#This creates a layer format which allows us to put the widgets in the bottom half of the screen side by side horizontally
        BoxLayout:
            pos:0,0
            size: root.width, root.height
            orientation: "horizontal"
            spacing: 10
            padding: 10

#Here the button calls the screen again so the same screen is created with the new image
            Button:
                id: Retake
                text: "Retake"
                background_normal: ''
                background_color: 0.75, 0.945, 0.43, 0.85
                on_press: Retake.background_color = 0.422, 0.891, 0.969, 0.85
                on_release:
                    app.camera()
                    root.manager.current = "LevelOneImage"

# Here the button takes the image and then calls te function which checks whether the written letter is an A
            Button:
                id: Check
                text: "Check"
                background_normal: ''
                background_color: 0.75, 0.945, 0.43, 0.85
                on_press: Check.background_color = 0.422, 0.891, 0.969, 0.85
                on_release:
                    app.machineLearning()

